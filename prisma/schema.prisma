generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Bathrooms {
  id          Int       @id @default(autoincrement())
  name        String
  building    Buildings @relation(fields: [buildingId], references: [id])
  buildingId  Int
  roomnum     String?
  description String?
  gender      Gender?
  stalls      Int?
  urinals     Int?
  sinks       Int?
  shower      Boolean?
  reviews     Reviews[]
}

enum Gender {
  Male
  Female
  Neutral
  Single_Occupancy
}

model Buildings {
  id        Int         @id @default(autoincrement())
  code      String
  name      String?
  bathrooms Bathrooms[]
}

model Reviews {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  bathroom   Bathrooms @relation(fields: [bathroomId], references: [id])
  bathroomId Int
  user       Users     @relation(fields: [userId], references: [id])
  userId     Int
  author     String?
  message    String?
  rating     Int
}

model Users {
  id      Int       @id @default(autoincrement())
  user    String
  reviews Reviews[]
}
