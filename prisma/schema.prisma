generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Bathrooms {
  id            Int        @id @default(autoincrement())
  name          String
  buildingId    Int
  roomnum       String?
  description   String?
  gender        Gender?
  shower        Boolean?
  sinks         Int?
  stalls        Int?
  urinals       Int?
  averageRating Float?
  building      Buildings  @relation(fields: [buildingId], references: [id])
  pictures      Pictures[]
  reviews       Reviews[]
}

model Buildings {
  id        Int         @id @default(autoincrement())
  code      String      @unique
  name      String
  abrev     String?
  bathrooms Bathrooms[]
}

model Reviews {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  bathroomId Int
  userId     Int
  author     String?
  message    String?
  rating     Int
  bathroom   Bathrooms  @relation(fields: [bathroomId], references: [id])
  user       Users      @relation(fields: [userId], references: [id])
  pictures   Pictures[]
}

model Users {
  id      Int       @id @default(autoincrement())
  user    String
  reviews Reviews[]
}

model Pictures {
  id          Int        @id @default(autoincrement())
  publicId    String
  reviewId    Int?
  bathroomsId Int?
  Bathrooms   Bathrooms? @relation(fields: [bathroomsId], references: [id])
  Reviews     Reviews?   @relation(fields: [reviewId], references: [id])
}

enum Gender {
  Male
  Female
  Neutral
  Family
}
