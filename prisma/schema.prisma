generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Bathrooms {
  id          Int       @id @default(autoincrement())
  name        String
  building    String
  roomnum     String
  description String?
  reviews     Reviews[]
}

model Reviews {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  bathroom   Bathrooms @relation(fields: [bathroomId], references: [id])
  bathroomId Int
  user       String
  author     String?
  message    String?
  rating     Int
}
